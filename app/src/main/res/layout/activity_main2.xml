<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:gravity="top|center"
    tools:context="com.android.pena.david.projetoteste.Main2Activity">

    <ImageView
        android:id="@+id/imBackground"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/movie_photo"/>

        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:textSize="23sp"
            android:layout_height="wrap_content"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/movieYear"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:text="@string/year"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@+id/movieYear"
        android:layout_toRightOf="@+id/movieYear"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/movieYearText"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/movieRate"
        android:layout_below="@+id/movieYear"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:text="@string/average"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@+id/movieRate"
        android:layout_alignBaseline="@+id/movieRate"
        android:layout_toRightOf="@+id/movieRate"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/movieRateText"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/movieDesc"
        android:layout_below="@+id/movieRate"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:text="@string/description"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@+id/movieDesc"
        android:layout_alignTop="@+id/movieDesc"
        android:layout_toRightOf="@+id/movieDesc"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/movieDescText"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:layout_height="wrap_content"/>


</RelativeLayout>



</LinearLayout>
</ScrollView>